@model dynamic
@{
    ViewBag.Title = "Collection";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <img class="img--banner" src="~/Content/Image/Home/collection.png" />
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="title--product mt-5"><a href="" id="cate" data-toggle="list">Caterogy</a></p>
            <ul id="list--caterogy">
                <li class="mt-2"><a href="" id="nike" data-toggle="list">Dynamic</a></li>
            </ul>
        </div>
        <div class="col-md-9 mt-2">
            <div class="row" id="ajax--load--product">
                @foreach (var i in Model.All)
                {
                    string path = i.PicturePath + i.Picture;
                    <div class="col-md-4 mt-5">
                        <div class="box--home" data-aos="fade-up" data-aos-duration="1000">
                            <img src="@path" class="box--img--home" />
                            <p class="box--brand mt-3">@i.CateName</p>
                            <p class="box--name--home">@i.Name</p>
                            <p class="box--price--home">@i.Unitpirce$</p>
                            <a class="over--lay" href="@Url.Action("Details/"+ @i.Id,"Product")">Select</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


