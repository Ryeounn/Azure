                    <p class="box--name--home">@i.Name</p>
                    <p class="box--price--home">@i.Unitpirce VND</p>
                    <a class="over--lay" href="">Select</a>
                </div>
            </div>
        }
    </div>
    <div class="row mt-5">
        <div class="col-md-12">
            <a class="btn btn--dark--model btn--dark--home" href="">See all . Puma</a>
        </div>
    </div>
    @* Converse *@
    <div class="row">
        <div class="col-md-12">
            <p class="all--title--home mt-5">Converse</p>
            <p class="under-border"></p>
        </div>
    </div>
    <div class="row mt-5">
        @foreach (var c in Model.Converse)
        {
            <div class="col-md-3">
