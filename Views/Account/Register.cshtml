@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="title--login mt-1">Sign up</p>
            <p class="content--register">If you don't have an account, please register here.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form action="/Account/Register" method="post">
                <div class="form-group">
                    <label for="email">Name<sup>*</sup></label>
                    <input type="text" class="form-control txt--login" placeholder="Enter name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="pwd">Phone<sup>*</sup></label>
                    <input type="text" class="form-control txt--login" placeholder="Enter phone" name="phone" required>
                </div>
                <div class="form-group">
                    <label for="pwd">Email<sup>*</sup></label>
                    <input type="text" class="form-control txt--login" placeholder="Enter email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="pwd">Username<sup>*</sup></label>
                    <input type="text" class="form-control txt--login" placeholder="Enter username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="pwd">Password<sup>*</sup></label>
                    <input type="password" class="form-control txt--login" placeholder="Enter password" name="password" required>
                </div>
                <button type="submit" class="btn btn--dark--model btn--login mt-3">Create Account</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        @if (ViewBag.SuccessMg != null)
        {
            <div id="msgAlert" style="margin-left: 1em;" class="alert alert-success">
                @ViewBag.SuccessMg
            </div>
        }
        else if (ViewBag.ErrorMg != null)
        {
            <div id="msgsAlert" style="margin-top: 2em;margin-left: 22em;" class="alert alert-danger">
                @ViewBag.ErrorMg
            </div>
        }
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <a href="@Url.Action("Users", "Account")" class="login--register">Sign in</a>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
        $('#msgsAlert').fadeOut('slow');
    }, 2000);
</script>
