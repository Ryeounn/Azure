<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="title--login mt-1">Sign in</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form action="/Account/Login" method="post">
                <div class="form-group">
                    <label for="email">Username<sup>*</sup></label>
                    <input type="text" class="form-control txt--login" placeholder="Enter username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="pwd">Password<sup>*</sup></label>
                    <input type="password" class="form-control txt--login" placeholder="Enter password" name="password" required>
                </div>
                <button type="submit" class="btn btn--dark--model btn--login mt-3">Submit</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <a href="" data-toggle="list" id="btnForgot" class="forgot--login">Forgot password?</a>
        </div>
        <div class="col-md-12">
            <p class="signup--login mt-3">Do not have an account. sign up <a href="@Url.Action("Register","Account")" class="link--login"> HERE.</a> </p>
        </div>
    </div>
</div>
<script>
    $("#btnForgot").click(function () {
        $('#ajax--load').load("/Account/ForgotPassword");
    })

</script>
