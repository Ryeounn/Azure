@model Sneker.Models.Order
@{
    ViewBag.Title = "EditOrder";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}

<div class="container-fluid">
    <div class="box--add">
        <div class="row">
            <div class="col-md-12">
                <p class="text">Edit Order</p>
            </div>
        </div>
        <form action="/Admin/OrderAdmin/Edit/@Model.OrderID" method="post">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="form-group" hidden>
                        <label class="form-text">OrderId</label>
                        <input type="text" class="form-control" name="id" value="@Model.OrderID" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Orderdate</label>
                        <input type="date" class="form-control" name="orderdate" value="@Model.Orderdate" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Email</label>
                        <input type="email" class="form-control" name="email" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Phone</label>
                        <input type="tel" class="form-control" name="phone" value="@Model.Phone" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Shipname</label>
                        <input type="text" class="form-control" name="shipname" value="@Model.Shipname" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Shipaddress</label>
                        <input type="text" class="form-control" name="shipaddress" value="@Model.Shipaddress" />
                    </div>

                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">Shipcity</label>
                        <input type="text" class="form-control" name="shipcity" value="@Model.Shipcity" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Shipcountry</label>
                        <input type="text" class="form-control" name="shipcountry" value="@Model.Shipcountry" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Note</label>
                        <input type="text" class="form-control" name="note" value="@Model.Note" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Status</label>
                        <input type="text" class="form-control" name="status" value="@Model.Status" />
                    </div>

                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="submit" name="create" class="btn--dark">Update</button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>
    </div>
</div>






