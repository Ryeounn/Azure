@model Sneker.Models.Order
@{
    ViewBag.Title = "EditRevenue";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}
<div class="container-fluid">
    <div class="box--add">
        <div class="row">
            <div class="col-md-12">
                <p class="text">Edit Order</p>
            </div>
        </div>
        <form action="/Admin/RevenueAdmin/Edit/@Model.OrderID" method="post">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="form-group" hidden>
                        <label class="form-text">OrderDetailsID</label>
                        <input type="text" class="form-control" name="orderid" value="@Model.OrderID" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Date</label>
                        <input type="date" class="form-control" name="orderdate" value="@Model.Orderdate" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Email</label>
                        <input type="text" class="form-control" name="email" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Ship Name</label>
                        <input type="text" class="form-control" name="shipname" value="@Model.Shipname" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Ship Address</label>
                        <input type="text" class="form-control" name="shipaddress" value="@Model.Shipaddress" />
                    </div>
                </div>
                <div class="col-md-5">

                    <div class="form-group">
                        <label class="form-text">Ship City</label>
                        <input type="text" class="form-control" name="shipcity" value="@Model.Shipcity" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Ship Country</label>
                        <input type="text" class="form-control" name="shipcountry" value="@Model.Shipcountry" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Note</label>
                        <input type="text" class="form-control" name="note" value="@Model.Note" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Status</label>
                        <input type="text" class="form-control" name="status" value="@Model.Status" />
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="submit" name="create" class="btn--dark">Update</button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>
    </div>
</div>






