@model List<Sneker.Models.Employee>
@{
    ViewBag.Title = "Staff";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="mai---shipo11" id="ajax--load">
                <div class="row">
                    <div class="col-md-1">
                        <p class="mai---anh">Admin</p>
                    </div>
                    <div class="col-md-5">
                        <a href="/Admin/Employee/Add"><i class="fa-solid fa-circle-plus icon---nut"></i></a>
                    </div>
                    <div class="col-md-3"></div>
                    <form action="/Admin/Employee/Staff" method="post">
                        <div class="col-md-3">
                            <input class="timkiem-nyc" type="text" id="username" name="search">
                            <button class="btn icon---kinh" type="submit"><i class="fa-solid fa-magnifying-glass "></i></button>
                        </div>
                    </form>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Photo</th>
                            <th>Fisrt Name</th>
                            <th>Last Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Birthday</th>
                            <th>Address</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EmployeeID</td>
                                <td>
                                    @{
                                        string url = item.PhotoPath + item.Photo;
                                    }
                                    <img class="img---product" src="@url" />
                                </td>
                                <td>@item.Firstname</td>
                                <td>@item.Lastname</td>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Birthday</td>
                                <td>@item.Address</td>
                                <td><a href="/Admin/ProductAdmin/Edit/@item.EmployeeID"><i class="fa-solid fa-pen"></i></a></td>
                                <td><a href="/Admin/ProductAdmin/Delete/@item.EmployeeID"><i class="fa-solid fa-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
