
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}
<div class="container-fluid">
    <div class="box--add">
        <div class="row">
            <div class="col-md-12">
                <p class="text">Add Product</p>
            </div>
        </div>
        <form action="/Admin/Employee/Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">First Name</label>
                        <input type="text" class="form-control" name="firstname" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Last Name</label>
                        <input type="text" class="form-control" name="lastname" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Username</label>
                        <input type="text" class="form-control" name="username" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Password</label>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Email</label>
                        <input type="text" class="form-control" name="email" />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">Phone</label>
                        <input type="text" placeholder="" class="form-control" name="phone" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Birthday</label>
                        <input type="date" placeholder="" class="form-control" name="birthday" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Address</label>
                        <input type="text" placeholder="" class="form-control" name="address" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Photo</label>
                        <input type="file" class="form-control" id="imageFile" name="imageFile" />
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="submit" name="create" class="btn--dark">Create</button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>
    </div>
</div>

