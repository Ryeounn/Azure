@model Sneker.Models.Customer
@{
    ViewBag.Title = "Add Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}

<div class="container-fluid">
    <div class="box--add">
        <div class="row">
            <div class="col-md-12">
                <p class="text">Edit Customer</p>
            </div>
        </div>
        <form action="/Admin/UserAdmin/Edit/@Model.CustomerID" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">Username</label>
                        <input type="text" class="form-control" readonly value="@Model.Username" name="username" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Password</label>
                        <input type="password" class="form-control" readonly value="@Model.Password" name="password" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Name</label>
                        <input type="text" class="form-control" value="@Model.Name" name="name" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Email</label>
                        <input type="text" class="form-control" value="@Model.Email" name="email" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Phone</label>
                        <input type="text" class="form-control" value="@Model.Phone" name="phone" />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">DateofBirth</label>
                        <input type="date" placeholder="" class="form-control" value="@Model.DateofBirth" name="date" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Address</label>
                        <input type="text" placeholder="" class="form-control" value="@Model.Address" name="address" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Avatar</label>
                        <input type="file" class="form-control" onchange="chooseFile(this)" id="imageFile" value="@Model.Avatar" name="imageFile" />
                    </div>
                    <div class="form-group">
                        <img class="img---product mt-4" id="image" name="image" src="@Model.AvatarPath@Model.Avatar" />
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="submit" name="create" class="btn--dark">Update</button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>
    </div>
</div>

<script>function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            reader.readAsDataURL(fileInput.files[0]);
        }
    }</script>
