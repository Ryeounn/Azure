<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="title--login mt-1">Reset Password</p>
            <p class="content--forgot">Forgot your password? Enter your email address to retrieve your password via email.</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form action="/Account/ForgotPassword" method="post">
                <div class="form-group">
                    <label for="email">Email<sup>*</sup></label>
                    <input type="text" class="form-control txt--login" placeholder="Enter email" name="email" required>
                </div>
                <button type="submit" class="btn btn--dark--model btn--login mt-3">Password Retrieval</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="signup--login back--forgot mt-3">Back to <a href="" id="btnBack" data-toggle="list" class="link--login"> HERE.</a> </p>
        </div>
    </div>
</div>
<script>
    $("#btnBack").click(function () {
        $('#ajax--load').load("/Account/Login");
    })
</script>
