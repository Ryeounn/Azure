<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Avb2QiuDEEvB4bZJYdft2mNjVShBftLdPG8FJ0V7irTLQ8Uo0qcPxh4Plq7G5tGm0rU+1SPhVotteLpBERwTkw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Css/Style.css")" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js" integrity="sha512-+k1pnlgt4F1H8L7t3z95o3/KO+o78INEcXTbnoJQ/F2VqDVhWoaiVml/OEHv9HsVgxUaVW+IbiZPUJQfF/YxZw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/Content/Script/lazyload.js"></script>
    <link rel="icon" type="image/x-icon" href="~/Content/Image/Home/logo-brand.png">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container top--header">
        <div class="row">
            <div class="col-md-4">
                <p class="hotline--header">HOTLINE: <a class="hotline--phone" href="">+1234 567 890</a></p>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Home")"><img class="img--header" src="~/Content/Image/Home/logo-brand.png" /></a>
            </div>
            <div class="col-md-4">
                <div class="infor--header">
                    <ul id="nav--header">
                        <li>
                            @if (Session["Username"] == null)
                            {
                                <a class="" href="@Url.Action("Users", "Account")">Account</a>
                                <ul class="subnav">

                                    <li><a href="@Url.Action("Users", "Account")">Sign In</a></li>
                                    <li><a href="@Url.Action("Register", "Account")">Sign Up</a></li>
                                </ul>
                            }
                            else
                            {
                                <a class="" href="@Url.Action("Information", "Account")">Account</a>
                                <ul class="subnav">
                                    <li><a href="@Url.Action("Information", "Account")">Hello, @Session["Name"]</a></li>
                                    <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                                </ul>
                            }
                            </li>
                            <li>
                                <a class="s" href="@Url.Action("Order", "Product")">Shopping Cart <i class="fa fa-shopping-cart"></i>@Html.Action("BagCart", "Product")</a>
                            </li>
                        </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container bottom--header">
        <div class="row">
            <div class="col-md-12">
                <hr />
                <ul id="nav">
                    <li>
                        <a class="sub-menu" href="@Url.Action("Shoes", "Product")">Shoes</a>
                        <ul class="subnav">
                            <li><a href="@Url.Action("/Shoes/1", "Product")">Nike</a></li>
                            <li><a href="@Url.Action("/Shoes/2", "Product")">Adidas</a></li>
                            <li><a href="@Url.Action("/Shoes/3", "Product")">Puma</a></li>
                            <li><a href="@Url.Action("/Shoes/4", "Product")">Converse</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="sub-menu" href="@Url.Action("Collection", "Home")">Collection</a>
                        @*<ul class="subnav">
                                <li><a href="#proplant.html">ProPlant</a></li>
                                <li><a href="#goodtrees.html">GoodTrees</a></li>
                                <li><a href="#prelotus.html">PreLotus</a></li>
                            </ul>*@
                    </li>
                    <li><a class="sub-menu" href="@Url.Action("Stories", "Home")">Stores</a></li>
                    <li><a class="sub-menu" href="@Url.Action("Service", "Home")">Service</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="scrollTop" onclick="scrollToTop()"></div>
    <div id="content" class="mb-5">
        @RenderBody()
    </div>
    <div class="container-fluid bottom--footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img class="logo--footer" src="~/Content/Image/Home/logo-brand.png" />
                    <div class="row">
                        <div class="col-md-1">
                            <i class="fas fa-map-marker-alt"></i>
                            <i class="fas fa-phone  mt-5"></i>
                            <i class="fas fa-envelope mt-4"></i>
                        </div>
                        <div class="col-md-11">
                            <p class="--footer">1 Ly Tu Trong, An Cu Ward, Ninh Kieu District, Can Tho City</p>
                            <p class="p--footer"><a class="link--footer" href="">+1234 567 890</a></p>
                            <p class="p--footer"><a class="link--footer" href="">sneker@gmail.com</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <p class="title--center--footer mt-5">Guide</p>
                    <p><a class="link--footer" href="@Url.Action("Instruction", "Home")">Shopping Guide</a></p>
                    <p><a class="link--footer" href="@Url.Action("Instruction", "Home")">Delivery and Payment</a></p>
                    <p><a class="link--footer" href="@Url.Action("Instruction", "Home")">Return and Warranty</a></p>
                </div>
                <div class="col-md-4">
                    <p class="title--right--footer mt-5">Sign up to receive new news</p>
                    <p class="subtitle--right--footer mt-5">Receive the latest product information, promotions and more.</p>
                    <form action="/Home/Contact" method="post">
                        <input type="text" class="form-control txtEmail" name="email" placeholder="Your Email" value="@Session["Email"]" />
                        <button type="submit" class="btn btn--dark--model mt-4">Register</button>
                    </form>
                    <div class="mt-3">
                        <a href="#"><i class="fab fa-facebook icon--footer ml--footer"></i></a>
                        <a href="#"><i class="fab fa-instagram icon--footer"></i></a>
                        <a href="#"><i class="fab fa-youtube icon--footer"></i></a>
                        <a href="#"><i class="fab fa-twitter icon--footer"></i></a>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <p class="content--bottom--footer">Copyright &copy; 2022 Sneker: 1 Ly Tu Trong Street, An Cu Ward, Ninh Kieu Dictrict, Can Tho City, VietNam.</p>
                </div>
            </div>
        </div>
    </div>
    <script>
        AOS.init();
    </script>
    <script>
        window.addEventListener('scroll', function () {
            var scroll = document.querySelector('.scrollTop');
            scroll.classList.toggle('active', window.scrollY > 500)
        })

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            })
        }
    </script>
</body>
</html>
