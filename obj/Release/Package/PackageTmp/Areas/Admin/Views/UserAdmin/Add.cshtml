@model Sneker.Models.Customer
@{
    ViewBag.Title = "Add Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}

<div class="container-fluid">
    <div class="box--add">
        <div class="row">
            <div class="col-md-12">
                <p class="text">Add Customer</p>
            </div>
        </div>
        <form action="/Admin/UserAdmin/Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">Username</label>
                        <input type="text" class="form-control" name="username" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Password</label>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Name</label>
                        <input type="text" class="form-control" name="name" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Email</label>
                        <input type="text" class="form-control" name="email" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Phone</label>
                        <input type="text" class="form-control" name="phone" />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-text">DateofBirth</label>
                        <input type="date" placeholder="" class="form-control" name="date" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Address</label>
                        <input type="text" placeholder="" class="form-control" name="address" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Avatar</label>
                        <input type="file" class="form-control" id="avataFile" name="avataFile" />
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="submit" name="create" class="btn--dark">Create</button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>
    </div>
</div>


