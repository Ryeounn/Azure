@model Sneker.Models.Order
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}
<div class="container-fluid">
    <div class="box--add">
        <div class="row">
            <div class="col-md-12">
                <p class="text">Edit Order</p>
            </div>
        </div>
        <form action="/Admin/Notification/Edit/@Model.OrderID" method="post">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group" hidden>
                        <label class="form-text">OrderID</label>
                        <input type="text" class="form-control" name="orderid" value="@Model.OrderID" />
                    </div>
                    <div class="form-group">
                        <label class="form-text">Status</label>
                        <input type="text" class="form-control" name="status" value="@Model.Status" />
                    </div>
                    <button type="submit" name="create" class="btn--dark">Update</button>
                </div>
                <div class="col-md-3"></div>
            </div>
        </form>
    </div>
</div>


