        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="mai---shipo11">
        <table class="table">
            <tr class="text--center--tb">
                <th>Date</th>
                <th>Email</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Note</th>
                <th>Status</th>
                <th>Accept</th>
                <th>Cancel</th>
            </tr>
            @foreach (var i in Model.Notis)
            {
                <tr class="text--center--tb">
                    <td hidden><input type="text" hidden value="@i.OrderID" name="orderid"/></td>
                    <td>@i.Orderdate</td>
                    <td>@i.Email</td>
                    <td>@i.Shipname</td>
                    <td>@i.Shipaddress</td>
                    <td>@i.Shipcity</td>
                    <td>@i.Note</td>
                    <td>@i.Status</td>
                    <td><a href="/Admin/Notification/Accept/@i.OrderID" class="link--changestatus"><i class="fas fa-check-circle icon--noti cl--icon--check"></i></a></td>
                    <td><a href="/Admin/Notification/Cancel/@i.OrderID" class="link--changestatus"><i class="fas fa-times-circle icon--noti cl--icon--close"></i></a></td>
                </tr>
            }
        </table>
    </div>
    </div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="mai---shipo11">
                <div class="row">
                    <div class="col-md-1">
                        <p class="mai---anh">OrderDetails</p>
                    </div>
                    <div class="col-md-8"></div>
                    <form action="/Admin/Notification/Noti" method="post">
                        <div class="col-md-3">
                            <input class="timkiem-nyc" type="text" placeholder="Status" id="Shipname" name="search">
                            <button class="btn icon---kinh" type="submit"><i class="fa-solid fa-magnifying-glass "></i></button>
                        </div>
                    </form>
                </div>
                <div class="row">
                    @if (ViewBag.SuccessMg != null)
                    {
                        <div id="msgAlert" style="margin-left: 3em;" class="alert alert-success">
                            @ViewBag.SuccessMg
                        </div>
                    }
                    else if (ViewBag.ErrorMg != null)
                    {
                        <div id="msgsAlert" style="margin-left: 3em;" class="alert alert-danger">
                            @ViewBag.ErrorMg
                        </div>
                    }
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Email</th>
                            <th>Ship Name</th>
                            <th>Ship Address</th>
                            <th>Ship City</th>
                            <th>Ship Country</th>
                            <th>Note</th>
                            <th>Status</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Tables)
                        {
                            <tr>
                                <td>@item.OrderID</td>
                                <td>@item.Orderdate</td>
                                <td>@item.Email</td>
                                <td>@item.Shipname</td>
                                <td>@item.Shipaddress</td>
                                <td>@item.Shipcity</td>
                                <td>@item.Shipcountry</td>
                                <td>@item.Note</td>
                                <td>@item.Status</td>
                                <td><a class="link--changestatus" href="/Admin/Notification/Edit/@item.OrderID"><i class="fa-solid fa-pen"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
        $('#msgsAlert').fadeOut('slow');
    }, 2000);
</script>
