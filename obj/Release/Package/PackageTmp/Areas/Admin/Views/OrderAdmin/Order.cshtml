@model List<Sneker.Models.Order>
@{
    ViewBag.Title = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="dfgh">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text---admin---product">1500</p>
                        <p class="text---admin---mt">Order</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fa-solid fa-clipboard icon---shoppingcar"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="progress">
                            <div class="progress-bar" style="width:100%"></div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <p class="phantram---admin">100%</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dfgh">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text---admin---product">1.050</p>
                        <p class="text---admin---mt">Done</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fa-solid fa-clipboard-check icon---shoppingcar"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="progress">
                            <div class="progress-bar" style="width:70%"></div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <p class="phantram---admin">70%</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dfgh">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text---admin---product">750</p>
                        <p class="text---admin---mt">Prepare</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fa-solid fa-paste icon---shoppingcar"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="progress">
                            <div class="progress-bar" style="width:50%"></div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <p class="phantram---admin">50%</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dfgh">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text---admin---product">450</p>
                        <p class="text---admin---mt">Pending</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fa-solid fa-clipboard-list icon---shoppingcar"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-10">
                        <div class="progress">
                            <div class="progress-bar" style="width:30%"></div>
                        </div>
                    </div>
                    <div class="col-md-1">
                    </div>
                </div>
                <div class="row">
                    <p class="phantram---admin">30%</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="mai---shipo11" id="ajax--load">
                <div class="row">
                    <div class="col-md-1">
                        <p class="mai---anh">Order</p>
                    </div>
                    <div class="col-md-5"></div>
                    <div class="col-md-3"></div>
                    <form action="/Admin/OrderAdmin/Order" method="post">
                        <div class="col-md-3">
                            <input class="timkiem-nyc" placeholder="Shipname" type="text" id="shipname" name="search">
                            <button class="btn icon---kinh" type="submit"><i class="fa-solid fa-magnifying-glass "></i></button>
                        </div>
                    </form>
                </div>
                <div class="row">
                    @if (ViewBag.SuccessMg != null)
                    {
                        <div id="msgAlert" style="margin-left: 2em;" class="alert alert-success">
                            @ViewBag.SuccessMg
                        </div>
                    }
                    else if (ViewBag.ErrorMg != null)
                    {
                        <div id="msgsAlert" style="margin-left: 2em;" class="alert alert-danger">
                            @ViewBag.ErrorMg
                        </div>
                    }
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Order Date</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Shipname</th>
                            <th>Shipaddress</th>
                            <th>Shipcity</th>
                            <th>Shipcountry</th>
                            <th>Note</th>
                            <th>Status</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderID</td>
                                <td>@item.Orderdate</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Shipname</td>
                                <td>@item.Shipaddress</td>
                                <td>@item.Shipcity</td>
                                <td>@item.Shipcountry</td>
                                <td>@item.Note</td>
                                <td>@item.Status</td>
                                <td><a class="link--changestatus" href="/Admin/OrderAdmin/Edit/@item.OrderID"><i class="fa-solid fa-pen"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
        $('#msgsAlert').fadeOut('slow');
    }, 2000);
</script>
